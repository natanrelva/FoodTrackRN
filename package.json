{
  "name": "foodtrack-workspace",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant restaurant management system",
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:client\" \"pnpm dev:tenant\" \"pnpm dev:kitchen\" \"pnpm dev:delivery\"",
    "dev:api": "pnpm --filter @foodtrack/api-gateway dev",
    "dev:client": "pnpm --filter @foodtrack/client dev",
    "dev:tenant": "pnpm --filter @foodtrack/tenant dev",
    "dev:kitchen": "pnpm --filter @foodtrack/kitchen dev",
    "dev:delivery": "pnpm --filter @foodtrack/delivery dev",
    "build": "pnpm build:types && pnpm build:shared && pnpm -r build",
    "build:types": "pnpm --filter @foodtrack/types build",
    "build:shared": "pnpm --filter @foodtrack/backend-shared build",
    "migrate": "pnpm --filter @foodtrack/migrations migrate",
    "setup": "pnpm install && pnpm build:types && pnpm build:shared",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "pnpm -r type-check",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "reset": "pnpm clean && pnpm install && pnpm setup",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d && sleep 10 && pnpm migrate"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}